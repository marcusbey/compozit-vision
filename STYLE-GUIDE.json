{
  "designSystem": {
    "name": "Compozit Vision â€“ Prestigious Authority Design",
    "version": "2.0.0",
    "meta": {
      "description": "Chic, authoritative, and prestigious design system emphasizing precision, artistic creation, and luxury aesthetics.",
      "brandKeywords": ["prestigious", "chic", "authority", "precision", "artistic", "luxury", "matte-black", "sophisticated"]
    },

    "colors": {
      "core": {
        "primary":   { "name": "Authority Black", "value": "#0A0A0A" },
        "secondary": { "name": "Charcoal Elite", "value": "#1A1A1A" },
        "deep":      { "name": "Deep Void", "value": "#0A0908" },
        "accent":    { "name": "Platinum Gold", "value": "#D4A574" },
        "highlight": { "name": "Pure White",    "value": "#FFFFFF" },
        "detail":    { "name": "Warm Bronze",   "value": "#B8935F" },
        "light":     { "name": "Soft Cream",    "value": "#FAF8F4" },
        "effect":    { "name": "Luxury Shimmer", "value": "#E8DDD1" }
      },
      "semantic": {
        "bg": {
          "app":        "#FAF8F4",
          "surface":    "#FFFFFF",
          "subsurface": "#F6F3EF",
          "elevated":   "#FFFFFF",
          "deep":       "#0A0908"
        },
        "text": {
          "primary":   "#0A0A0A",
          "secondary": "#1A1A1A",
          "muted":     "#666666",
          "inverse":   "#FFFFFF",
          "link":      "#0A0A0A"
        },
        "border": {
          "soft":  "#E8DDD1",
          "hard":  "#D4A574",
          "focus": "#B8935F"
        },
        "states": {
          "brand":        "#D4A574",
          "brandHover":   "#C7956A",
          "brandPressed": "#B8935F",
          "success":      "#22C55E",
          "warning":      "#F59E0B",
          "danger":       "#EF4444",
          "info":         "#3B82F6"
        },
        "overlays": {
          "scrim": "rgba(10,9,8,0.85)",
          "deepScrim": "rgba(10,9,8,1)",
          "focusRing": "rgba(212,165,116,0.6)"
        }
      },
      "gradients": {
        "luxuryGlow": ["#FAF8F4", "#E8DDD1"],
        "prestigeAccent": ["#D4A574", "#B8935F", "#A77E60"],
        "authorityDepth": ["#0A0A0A", "#1A1A1A", "#2A2A2A"]
      }
    },

    "typography": {
      "family": {
        "brand": "Inter, -apple-system, Roboto, 'Helvetica Neue', Arial, sans-serif",
        "numeric": "Inter, system-ui, sans-serif"
      },
      "scale": {
        "display":   { "size": 32, "lineHeight": 40, "weight": 700, "tracking": -0.4 },
        "h1":        { "size": 28, "lineHeight": 36, "weight": 600, "tracking": -0.2 },
        "h2":        { "size": 22, "lineHeight": 28, "weight": 600 },
        "h3":        { "size": 18, "lineHeight": 24, "weight": 600 },
        "subtitle":  { "size": 16, "lineHeight": 22, "weight": 500 },
        "body":      { "size": 16, "lineHeight": 22, "weight": 400 },
        "bodySmall": { "size": 14, "lineHeight": 20, "weight": 400 },
        "caption":   { "size": 12, "lineHeight": 16, "weight": 400 },
        "overline":  { "size": 11, "lineHeight": 14, "weight": 600, "case": "uppercase", "tracking": 0.8 }
      },
      "defaults": {
        "color": "#1C1C1C",
        "paragraphSpacing": 8
      }
    },

    "spacing": {
      "xs": 4, "sm": 8, "md": 12, "lg": 16, "xl": 24, "xxl": 32, "xxxl": 48
    },

    "radii": {
      "sm": 8, "md": 12, "lg": 16, "xl": 24, "pill": 999
    },

    "elevation": {
      "e0": "none",
      "e1": "0 1px 3px rgba(0,0,0,0.06)",
      "e2": "0 4px 12px rgba(0,0,0,0.08)",
      "e3": "0 10px 24px rgba(0,0,0,0.10)"
    },

    "motion": {
      "duration": { "fast": 120, "base": 200, "slow": 300 },
      "easing": {
        "inOut": "cubic-bezier(0.4,0.0,0.2,1)",
        "enter": "cubic-bezier(0.0,0.0,0.2,1)",
        "exit":  "cubic-bezier(0.4,0.0,1,1)"
      },
      "focusRing": { "width": 2, "color": "rgba(201,169,140,0.6)" }
    },

    "icons": {
      "stroke": 2,
      "color": "#0A0A0A",
      "accent": "#D4A574",
      "size": { "sm": 16, "md": 20, "lg": 24 },
      "prestige": {
        "weight": "bold",
        "precision": "sharp-edges"
      }
    },

    "components": {
      "buttons": {
        "sizes": {
          "sm":   { "height": 36, "padX": 14, "text": "bodySmall", "radius": "pill", "icon": 18 },
          "md":   { "height": 44, "padX": 18, "text": "body",      "radius": "pill", "icon": 20 },
          "lg":   { "height": 52, "padX": 22, "text": "subtitle",  "radius": "pill", "icon": 22 }
        },
        "variants": {
          "primary": {
            "bg": "#0A0A0A",
            "fg": "#FFFFFF",
            "border": "transparent",
            "hoverBg": "#1A1A1A",
            "pressedBg": "#000000",
            "focusRing": "rgba(212,165,116,0.8)",
            "shadow": "0 4px 16px rgba(0,0,0,0.25)"
          },
          "authority": {
            "bg": "#1A1A1A",
            "fg": "#FFFFFF",
            "border": "1px solid #D4A574",
            "hoverBg": "#2A2A2A",
            "pressedBg": "#0A0A0A",
            "focusRing": "rgba(212,165,116,0.8)",
            "shadow": "0 6px 20px rgba(0,0,0,0.3)"
          },
          "brand": {
            "bg": "#D4A574",
            "fg": "#0A0A0A",
            "hoverBg": "#C7956A",
            "pressedBg": "#B8935F",
            "focusRing": "rgba(10,10,10,0.4)",
            "shadow": "0 4px 16px rgba(212,165,116,0.25)"
          },
          "ghost": {
            "bg": "transparent",
            "fg": "#0A0A0A",
            "hoverBg": "rgba(232,221,209,0.4)",
            "pressedBg": "rgba(232,221,209,0.7)",
            "border": "1px solid #E8DDD1"
          },
          "link": {
            "fg": "#0A0A0A",
            "underline": true,
            "hoverFg": "#D4A574"
          },
          "disabled": {
            "bg": "#E8DDD1",
            "fg": "#999999",
            "border": "transparent"
          }
        }
      },

      "inputs": {
        "height": 48,
        "padX": 16,
        "radius": "md",
        "bg": "#FFFFFF",
        "text": "#0A0A0A",
        "placeholder": "#666666",
        "border": "1px solid #E8DDD1",
        "focusBorder": "2px solid #D4A574",
        "prefixIcon": { "size": 20, "color": "#666666" },
        "shadow": "0 2px 8px rgba(0,0,0,0.06)",
        "states": {
          "errorBorder": "2px solid #EF4444",
          "successBorder": "2px solid #22C55E",
          "disabledBg": "#F6F3EF"
        }
      },

      "cards": {
        "bg": "#FFFFFF",
        "radius": "lg",
        "shadow": "e1",
        "pad": "lg",
        "border": "1px solid #F0EAE1",
        "variants": {
          "elevated": { "shadow": "e2" },
          "subtle":   { "bg": "#FDFBF7", "border": "1px solid #EDE7DE" }
        }
      },

      "appBar": {
        "height": 56,
        "bg": "#FFFFFF",
        "fg": "#1C1C1C",
        "borderBottom": "1px solid #E8E2D8"
      },

      "tabBar": {
        "bg": "#FFFFFF",
        "indicator": "#C9A98C",
        "inactive": "#7A7A7A",
        "active": "#1C1C1C",
        "radius": 12,
        "itemPadX": 16,
        "itemPadY": 10
      },

      "chip": {
        "radius": 999,
        "padX": 12,
        "padY": 8,
        "bg": "#F7F3ED",
        "fg": "#1C1C1C",
        "selectedBg": "#E8E2D8",
        "selectedBorder": "1px solid #C9A98C"
      },

      "modal": {
        "sheetBg": "#FFFFFF",
        "corner": 24,
        "scrim": "rgba(28,28,28,0.45)",
        "handle": "#D6CBBE",
        "elevation": "e3",
        "title": "h2"
      },

      "toast": {
        "radius": 14,
        "pad": 14,
        "bg": "#1C1C1C",
        "fg": "#FDFBF7",
        "successBg": "#2F5F3A",
        "warningBg": "#735B1F",
        "dangerBg": "#6B2E24"
      },

      "lists": {
        "itemHeight": 56,
        "divider": "#EDE7DE",
        "padX": 16,
        "title": "body",
        "subtitle": "bodySmall",
        "chevronColor": "#7A7A7A"
      }
    },

    "effects": {
      "luxuryAccentUsage": {
        "intent": "sparingly-for-premium-elements",
        "appliesTo": ["progressTrack", "selectionHighlight", "premiumBadge", "ctaButtons"],
        "gradient": "prestigeAccent",
        "opacity": 0.6,
        "blur": 20
      },
      "authorityGlow": {
        "shadow": "0 0 0 1px rgba(212,165,116,0.4), 0 16px 48px rgba(10,10,10,0.15)"
      },
      "prestigeShadow": {
        "subtle": "0 2px 8px rgba(0,0,0,0.08)",
        "elevated": "0 8px 24px rgba(0,0,0,0.12)",
        "dramatic": "0 16px 48px rgba(0,0,0,0.2)"
      }
    },

    "prestigeDesignPrinciples": {
      "chic": {
        "principle": "Maintain sophisticated simplicity with bold contrast",
        "implementation": ["high-contrast-text", "ample-whitespace", "selective-color-usage"]
      },
      "authority": {
        "principle": "Use deep blacks and strategic gold accents to convey power and precision",
        "implementation": ["dominant-black-buttons", "gold-accent-highlights", "strong-typography"]
      },
      "artisticCreation": {
        "principle": "Present content with gallery-like precision and attention to detail",
        "implementation": ["full-bleed-imagery", "careful-alignment", "purposeful-spacing"]
      },
      "consistency": {
        "principle": "Maintain unwavering design standards across all touchpoints",
        "implementation": ["consistent-button-styles", "uniform-spacing", "predictable-interactions"]
      }
    },

    "a11y": {
      "minContrast": 4.5,
      "primaryButtonContrast": { "bg": "#0A0A0A", "fg": "#FFFFFF", "ratio": 19.2 },
      "brandButtonContrast":   { "bg": "#D4A574", "fg": "#0A0A0A", "ratio": 8.7 },
      "authorityButtonContrast": { "bg": "#1A1A1A", "fg": "#FFFFFF", "ratio": 16.4 },
      "focusVisible": { "ring": { "color": "rgba(212,165,116,0.8)", "width": 2, "offset": 2 } },
      "tapTargets": { "minSize": 44, "minSpacing": 8 }
    },

    "layout": {
      "grid": {
        "containerPadding": 16,
        "columnCount": 12,
        "gutter": 12
      },
      "images": {
        "corner": "lg",
        "placeholderBg": "#F6F3EF"
      },
      "fullScreenCoverage": {
        "principle": "Always ensure backgrounds and hero images cover the entire screen or designated area without white borders",
        "heroImages": {
          "coverage": "full-width",
          "aspectRatio": "maintain",
          "positioning": "cover",
          "margins": "none",
          "borders": "none"
        },
        "backgrounds": {
          "videoBackgrounds": "full-screen-coverage",
          "imageBackgrounds": "edge-to-edge",
          "gradientOverlays": "full-coverage"
        },
        "prestige": {
          "principle": "Maintain authoritative and chic appearance through consistent full-coverage visuals",
          "avoidWhiteBorders": true,
          "ensureEdgeToEdge": true
        }
      }
    },

    "modes": {
      "light": "default",
      "dark": {
        "bg":    { "app": "#0A0A0A", "surface": "#1A1A1A", "subsurface": "#2A2A2A", "elevated": "#1A1A1A" },
        "text":  { "primary": "#FFFFFF", "secondary": "#E8DDD1", "muted": "#B8935F" },
        "border": { "soft": "#2A2A2A", "hard": "#3A3A3A", "focus": "#D4A574" },
        "button": {
          "primaryBg": "#FFFFFF",
          "primaryFg": "#0A0A0A",
          "brandBg": "#D4A574",
          "brandFg": "#0A0A0A",
          "authorityBg": "#2A2A2A",
          "authorityFg": "#FFFFFF"
        }
      }
    }
  }
}
